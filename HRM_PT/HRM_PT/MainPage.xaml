<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="DarkSlateGray"
             x:Class="HRM_PT.MainPage"
             >
    <!--MenuItem.Accelerator="ffff"-->
    <ScrollView>
        <StackLayout Background="DarkSlateGray"  >
            <Grid Margin="200,20,200,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <StackLayout Grid.Column="0" Grid.Row="0" >
                    <HorizontalStackLayout >
                        <Image Source="ccma_preview.png" WidthRequest="30"/>
                        <Label Text="Cape Coast Metropolitan Assembly"  FontSize="20" Padding="10" FontAttributes="Bold"/>
                        
                    </HorizontalStackLayout>
                </StackLayout>
                <StackLayout Grid.Column="2" Grid.Row="0"  Margin="0,5,0,0">
                    <HorizontalStackLayout HorizontalOptions="End" >
                        <Button Text="Sign Up" TextColor="DarkSlateGray" CornerRadius="10" HeightRequest="10" Padding="5,-5,5,-5" WidthRequest="100" BackgroundColor="NavajoWhite" Clicked="SignUpPage" />
                    </HorizontalStackLayout>
                </StackLayout>
                
            </Grid>
            <Grid Margin="200,50,200,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <StackLayout Grid.Column="0" Grid.Row="0">
                    <StackLayout Spacing="-20">
                        <Label Text="Human" FontSize="70" TextColor="Green"/>
                        <Label Text="Resources" FontSize="70" TextColor="LightCoral"/>
                        <BoxView WidthRequest="320" HeightRequest="5"   BackgroundColor="White" HorizontalOptions="StartAndExpand" Margin="6,25,0,15" />
                        <Label Text="Department" FontSize="70" TextColor="NavajoWhite"/>
                        <BoxView WidthRequest="390" HeightRequest="5" BackgroundColor="White" HorizontalOptions="StartAndExpand" Margin="6,25,0,15" />

                    </StackLayout>
                </StackLayout>
                <StackLayout Grid.Column="2" Grid.Row="0">
                    <StackLayout Margin="0,20,0,0">
                        <Label Text="Fostering Excellence, Nurturing Potential: At our Human Resources office, we are committed to fostering a culture of excellence by nurturing the potential of every employee. Our mission is to recruit, develop, and retain the best talent, ensuring they thrive both personally and professionally. Together, we pave the way for success, one individual at a time."
                           WidthRequest="350"
                           FontSize="14" CharacterSpacing="2"
                           />
                                            <Button Text="Sign In" 
                            Margin="0,20,0,0" 
                            BackgroundColor="NavajoWhite" 
                            CornerRadius="0" 
                            TextColor="DarkSlateGray"
                            FontSize="20"
                            >
                            <Button.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ShowSignIn"/>
                            </Button.GestureRecognizers>
                        </Button>
                    </StackLayout>
                </StackLayout>
            </Grid>

            <StackLayout BackgroundColor="NavajoWhite" Margin="0,100,0,0" IsVisible="false" x:Name="signinpage">
                <StackLayout WidthRequest="399" Padding="60" BackgroundColor="LightCoral" Spacing="10" Margin="0,40,0,0">
                    <StackLayout HorizontalOptions="Start" Margin="-27,0,0,20">
                        <Label Text="Hello," FontSize="50" FontAttributes="Bold"/>
                        <HorizontalStackLayout>
                            <Label Text="Friend!" FontSize="50" FontAttributes="Bold" x:Name="user" />

                        </HorizontalStackLayout>
                    </StackLayout>
                    <Entry 
                   Placeholder="Enter your Staff ID"
                   ClearButtonVisibility="WhileEditing"
                        WidthRequest="350"
                        x:Name="hello"
                        PlaceholderColor="White"
                        TextChanged="On_Name"
                   />

                    <HorizontalStackLayout Margin="-33,0,0,0" x:Name="userPassword" IsVisible="false">
                        <Entry 
                       Placeholder="Enter your password"
                       ClearButtonVisibility="WhileEditing"
                       IsPassword="true"
                       IsSpellCheckEnabled="false"
                            PlaceholderColor="White"
                       WidthRequest="300"
                            x:Name="password"
                       TextChanged="setUserPassword"
                            />
                        <Image Source="eye_slash_icon.png" WidthRequest="25" Margin="0,15,0,0" x:Name="show_password">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ShowPassword"/>
                            </Image.GestureRecognizers>
                        </Image>

                    </HorizontalStackLayout>
  
                  
                    <Button 
                        Text="Sign In" 
                        WidthRequest="401" 
                        CornerRadius="0" 
                        Margin="-1,20,0,0" 
                        HorizontalOptions="CenterAndExpand" 
                        FontAttributes="Bold" 
                        BackgroundColor="NavajoWhite" 
                        TextColor="DarkSlateGray"
                        FontSize="20"
                        x:Name="userButton"
                        IsVisible="false"
                        Clicked="nextPage"/>
                    <ActivityIndicator IsRunning="False" x:Name="signInActivitor" />

                </StackLayout>

            </StackLayout>
        </StackLayout>

    </ScrollView>
    



</ContentPage>
