<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HRM_PT.ActionPage"
            
             >


        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            
            <StackLayout
            Grid.Column="0"
            Grid.Row="0"
            BackgroundColor="DarkSlateGray" 
            >


            
                    <Label Text="HR's Office" FontSize="25" HorizontalOptions="Center" Padding="10" TextColor="White" FontAttributes="Bold"/>

                    <Frame WidthRequest="200" HeightRequest="50" Margin="0,20,0,0" x:Name="hoverSearch" BorderColor="Transparent"  BackgroundColor="Transparent" >
                        <HorizontalStackLayout Padding="-7" Spacing="10">
                            <Image Source="search_person.png" WidthRequest="20" x:Name="hoverSearchImage" Margin="0,-2,0,0"/>

                            <Label Text="Search Record"   TextColor="Gray" x:Name="hoverSearchLabel" FontAttributes="Bold"  />

                        </HorizontalStackLayout>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="openSearchEmployeeFrame" NumberOfTapsRequired="1"/>

                        </Frame.GestureRecognizers>
                    </Frame>

                    <Frame WidthRequest="200" HeightRequest="50" BackgroundColor="Transparent" x:Name="hoverAdd" BorderColor="Transparent">
                        <HorizontalStackLayout Padding="-7" Spacing="10">
                            <Image Source="add_person.png" WidthRequest="20" x:Name="hoverAddImage" Margin="0,-2,0,0"/>

                            <Label Text="Add Record" TextColor="Gray" x:Name="hoverAddLabel" FontAttributes="Bold" />

                        </HorizontalStackLayout>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="openAddEmployeeFrame" NumberOfTapsRequired="1"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                    <Frame WidthRequest="200" HeightRequest="50" BackgroundColor="Transparent" x:Name="hoverUpdate" BorderColor="Transparent">
                        <HorizontalStackLayout Padding="-7" Spacing="10">
                            <Image Source="renew.png"  WidthRequest="18"  x:Name="hoverUpdateImage" Margin="0,-2,0,0" />

                            <Label Text="Update Record" TextColor="Gray" x:Name="hoverUpdateLabel" FontAttributes="Bold" />

                        </HorizontalStackLayout>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="openUpdateEmployeeFrame" NumberOfTapsRequired="1"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                    <Frame WidthRequest="200" HeightRequest="50" BackgroundColor="Transparent" x:Name="hoverDelete" BorderColor="Transparent">
                        <HorizontalStackLayout Spacing="10" Padding="-7">
                            <Image Source="user_delete_icon.png"  WidthRequest="18" x:Name="hoverDeleteImage" Margin="0,-2,0,0" />

                            <Label Text="Delete Record" TextColor="Gray" x:Name="hoverDeleteLabel" FontAttributes="Bold"  />

                        </HorizontalStackLayout>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="openDeleteEmployeeFrame" NumberOfTapsRequired="1"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                    <Frame WidthRequest="200" HeightRequest="50" BackgroundColor="Transparent" x:Name="hoverLeave" BorderColor="Transparent">
                        <HorizontalStackLayout Spacing="10" Padding="-7">
                            <Image Source="leave_manage.png"  WidthRequest="18" x:Name="hoverLeaveImage"  Margin="0,-2,0,0" />

                            <Label Text="Leave Management" TextColor="Gray" x:Name="hoverLeaveLabel" FontAttributes="Bold"  />

                        </HorizontalStackLayout>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="openLeaveManagementFrame" />
                        </Frame.GestureRecognizers>
                    </Frame>
                    <Frame WidthRequest="205" HeightRequest="50" BackgroundColor="Transparent" x:Name="hoverPerformance" BorderColor="Transparent">
                        <HorizontalStackLayout Spacing="10" Padding="-7">
                            <Image Source="assessment.png" WidthRequest="18" x:Name="hoverPerformanceImage"  Margin="0,-2,0,0"/>

                            <Label Text="Performance Management" TextColor="Gray" x:Name="hoverPerformanceLabel"  FontAttributes="Bold"  FontSize="12.5" />

                        </HorizontalStackLayout>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="openPerformanceManagementFrame" NumberOfTapsRequired="1"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                    <StackLayout HorizontalOptions="Center"  Margin="0,50,0,0">
                        <Frame WidthRequest="200" HeightRequest="50" x:Name="logoutButton"  BackgroundColor="IndianRed" BorderColor="Transparent" >
                            <HorizontalStackLayout Padding="-7" Spacing="10">
                                <Image Source="white_reload.png" WidthRequest="18" />
                                <Label Text="Logout"  TextColor="White" FontAttributes="Bold" />
                            </HorizontalStackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="logout" NumberOfTapsRequired="1"/>


                            </Frame.GestureRecognizers>
                        </Frame>

                    </StackLayout>
            
            
            
        </StackLayout>
        <ScrollView
            Grid.Row="0"
            Grid.Column="1"
            >
            <StackLayout 
                Padding="10"
                BackgroundColor="Lavender"
                IsVisible="true"
                >

                <StackLayout IsVisible="false"  x:Name="searchFram" BackgroundColor="Transparent" >
                    <StackLayout Spacing="20" Padding="30">
                        <StackLayout >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>
                                <StackLayout Grid.Column="0" Grid.Row="0" >
                                    <HorizontalStackLayout Spacing="5" Grid.Column="0" Grid.Row="0">
                                        <Image Source="star.png" WidthRequest="25" Margin="0,-15,0,0"/>
                                        <StackLayout>
                                            <Label Text="Search Employee" TextColor="Black" FontSize="25"/>
                                            <Label Text="Search employees data and more here." TextColor="Black"/>
                                        </StackLayout>
                                    </HorizontalStackLayout>
                                </StackLayout>
                                <StackLayout Grid.Column="2" Grid.Row="0">
                                    <HorizontalStackLayout Spacing="5" Margin="0,7,0,0" Grid.Column="2" Grid.Row="0" HorizontalOptions="EndAndExpand" >
                                        <Frame WidthRequest="40" HeightRequest="40" Padding="0"  Background="Transparent" CornerRadius="75" Margin="0,-10,0,0"  >
                                            <Image Source="man_icon.png" WidthRequest="30" />
                                        </Frame>
                                        <StackLayout Spacing="-3">
                                            <Label x:Name="OneFullname" TextColor="Black" FontSize="15" FontAttributes="Bold"/>
                                            <Label x:Name="OneStaffid" TextColor="Black" FontSize="13"/>
                                        </StackLayout>
                                    </HorizontalStackLayout>
                                </StackLayout>
                            </Grid>

                            <BoxView HeightRequest="2"  Color="Gray" Margin="0, 20, 0, 20"/>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="7*"/>
                                </Grid.ColumnDefinitions>
                                <StackLayout
                                    Grid.Column="0"
                                    Grid.Row ="0"
                                    HorizontalOptions="Start"
                                    WidthRequest="400"
                               
                                    >
                                    <StackLayout Margin="10,30,0,20"  HorizontalOptions="Start">
                                        <Label Text="Hi User" HorizontalOptions="StartAndExpand" FontSize="30" TextColor="Black" FontAttributes="Bold" x:Name="user" />
                                        <Label Text="Search employee with" HorizontalOptions="Start" TextColor="Black" FontSize="30"/>
                                    </StackLayout>
                                    <StackLayout Margin="10,0,0,20" Spacing="15">
                                        <Label Text="Options" FontAttributes="Bold" TextColor="#1B4242" FontSize="25"/>
                                        <HorizontalStackLayout Spacing="12">
                                            <StackLayout Spacing="5">
                                                <Frame WidthRequest="150" BorderColor="Transparent" HasShadow="True" HeightRequest="50" x:Name="openSearchByStaffIDFormFrame" BackgroundColor="#5C8374"    >
                                                    <Label Text="Staff ID " Padding="5" TextColor="Black" FontAttributes="Bold" x:Name="openSearchByStaffIDFormLabel" Margin="-10,-13,0,0"/>
                                                    <Frame.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="openSearchByStaffIDForm" NumberOfTapsRequired="1"/>
                                                    </Frame.GestureRecognizers>
                                                </Frame>
                                            </StackLayout>
                                            <StackLayout Spacing="5">
                                                <Frame WidthRequest="150" HeightRequest="50"  BackgroundColor="#5C8374" x:Name="openSearchByDepartmentFormFrame" BorderColor="Transparent">
                                                    <HorizontalStackLayout>
                                                        <Label Text="Department" Padding="5" Margin="-15,-13,0,0" FontAttributes="Bold" x:Name="openSearchByDepartmentFormLabel" TextColor="Black"/>
                                                    </HorizontalStackLayout>
                                                    <Frame.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="openSearchByDepartmentForm" NumberOfTapsRequired="1"/>
                                                    </Frame.GestureRecognizers>

                                                </Frame>
                                            </StackLayout>
                                            
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout Spacing="12" Margin="0,0,0,0">
                                            <StackLayout Spacing="5">
                                                <Frame WidthRequest="150" HeightRequest="50" BackgroundColor="#5C8374" x:Name="openSearchByPaymentModeFrame"  BorderColor="Transparent">
                                                    <HorizontalStackLayout>
                                                        <Label Text="Payment Mode" Padding="5" Margin="-15,-13,0,0" FontAttributes="Bold" x:Name="openSearchByPaymentModeLabel" TextColor="Black"/>
                                                    </HorizontalStackLayout>
                                                    <Frame.GestureRecognizers>
                                                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="openSearchByPaymentMode"/>
                                                    </Frame.GestureRecognizers>
                                                </Frame>
                                            </StackLayout>
                                            <StackLayout Spacing="5">
                                                <Frame WidthRequest="150" HeightRequest="50"  BackgroundColor="#5C8374" x:Name="openSearchBySubMetroFormFrame" BorderColor="Transparent">
                                                    <HorizontalStackLayout>
                                                        <Label Text="Sub Metro" Padding="5" Margin="-15,-13,0,0" FontAttributes="Bold" x:Name="openSearchBySubMetroFormLabel" TextColor="Black"/>
                                                    </HorizontalStackLayout>
                                                    <Frame.GestureRecognizers>
                                                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="openSearchBySubMetroForm" />
                                                    </Frame.GestureRecognizers>
                                                </Frame>
                                            </StackLayout>
                                        </HorizontalStackLayout>
                                    </StackLayout>
                                </StackLayout>
                                <StackLayout
                                    Grid.Column="2"
                                    Grid.Row="0"
                                    >
                                    <Frame IsVisible="false" BackgroundColor="Transparent" x:Name="searchByStaffID">
                                        <StackLayout Spacing="20" Margin="0,72,0,72">
                                            <Label Text="Searching By Staff ID" HorizontalOptions="Center" TextColor="Black" FontAttributes="Bold" FontSize="20"/>
                                            <Entry Placeholder="Enter a staff id"  PlaceholderColor="Black" WidthRequest="400" ClearButtonVisibility="WhileEditing" Background="LightGray" TextColor="Black" x:Name="searchByStaffID_entryStaffID" TextChanged="OnSearchByStaffID_entryStaffID" />
                                            <Label x:Name="errorsearchByStaffID_entryStaffID" FontSize="12"  Margin="100,-15,0,-15"  TextColor="Red" IsVisible="false" />
                                            <Button Text="Submit" WidthRequest="400" TextColor="White" FontAttributes="Bold" Background="DarkSlateGray" Clicked="submitSearchByStaffID" x:Name="changeButtonSubmitSearchByStaffID"/>
                                            <Label x:Name="statusSubmitSearchByStaffID" FontSize="12" TextColor="Black" Margin="100 ,-15,0,-15" IsVisible="false" />
                                            <ActivityIndicator IsRunning="false" Color="NavajoWhite" HorizontalOptions="Center" x:Name="act1"/>
                                        </StackLayout>
                                    </Frame>
                                    <Frame IsVisible="false" BackgroundColor="Transparent" x:Name="searchByDepartment">
                                        <StackLayout Spacing="20" Margin="0,72,0,72">
                                            <Label Text="Searching By Department" HorizontalOptions="Center" TextColor="Black" FontAttributes="Bold" FontSize="20"/>
                                            <Entry Placeholder="Enter a department name"  WidthRequest="400" ClearButtonVisibility="WhileEditing" Background="LightGray" TextColor="Black" x:Name="searchByDepartment_Name" TextChanged="OnSearchByDepartment_Name" PlaceholderColor="Black"/>
                                            <Label x:Name="errorsearchByDepartment_entryStaffID" FontSize="12"  Margin="100,-15,0,-5" Text="hi" TextColor="Red" IsVisible="false" />
                                            <Button Text="Submit" WidthRequest="400" TextColor="White"  FontAttributes="Bold" Background="DarkSlateGray" Clicked="submitSearchByDepartment" x:Name="changeButtonSubmitSearchByDepartment" Margin="0,-10,0,0"/>
                                            <Label x:Name="statusSubmitSearchDepartment" FontSize="12" TextColor="Black" Margin="100,-15,0,-5" Text="hello" IsVisible="false" />
                                            <ActivityIndicator IsRunning="False" Color="NavajoWhite" HorizontalOptions="Center" x:Name="act2"/>

                                        </StackLayout>
                                    </Frame>
                                    <Frame IsVisible="false" BackgroundColor="Transparent" x:Name="searchBySubMetro">
                                        <StackLayout Spacing="20" Margin="0,72,0,72">
                                            <Label Text="Searching By Sub Metro" HorizontalOptions="Center" TextColor="Black" FontAttributes="Bold" FontSize="20"/>
                                            <Picker  WidthRequest="400"  TextColor="Black" Background="LightGray" x:Name="searchBy_SubMetro" SelectedIndexChanged="OnPickerSearchBy_SubMetro">
                                                <Picker.Items>
                                                    <x:String>North</x:String>
                                                    <x:String>South</x:String>
                                                </Picker.Items>
                                            </Picker>
                                            <Button Text="Submit" WidthRequest="400" Clicked="submitSearchBySub_Metro" x:Name="changeButtonSubmitSearchBySub_Metro" TextColor="White"  FontAttributes="Bold" Background="DarkSlateGray"/>
                                            <ActivityIndicator IsRunning="False" Color="NavajoWhite" HorizontalOptions="Center" x:Name="act3" />

                                        </StackLayout>
                                    </Frame>
                                    <Frame IsVisible="false" BackgroundColor="Transparent" x:Name="searchByPaymentMode">
                                        <StackLayout Spacing="20" Margin="0,72,0,72">
                                            <Label Text="Searching By Payment Mode" TextColor="Black" HorizontalOptions="Center" FontAttributes="Bold" FontSize="20"/>
                                            <Picker  WidthRequest="400" Background="LightGray" TextColor="Black"  x:Name="searchBy_PaymentMode" SelectedIndexChanged="OnPickerSearchBy_PaymentMode">
                                                <Picker.Items>
                                                    <x:String>GOG</x:String>
                                                    <x:String>IGF</x:String>
                                                </Picker.Items>
                                            </Picker>
                                            <Button Text="Submit" WidthRequest="400" Clicked="submitSearchBy_Payment"  x:Name="changeButtonSubmitSearchBy_Payment" TextColor="White"  FontAttributes="Bold" Background="DarkSlateGray"/>
                                            <ActivityIndicator IsRunning="False" Color="NavajoWhite" HorizontalOptions="Center" x:Name="act4"/>
                                        </StackLayout>
                                    </Frame>
                                </StackLayout>
                                
                            </Grid>
                        </StackLayout>
                            
                         <!--department-->
                        <StackLayout x:Name="byDepartment" IsVisible="false">
                            <StackLayout >
                               
                                <StackLayout Spacing="10" Padding="5">
                                    <HorizontalStackLayout Spacing="20" >
                                        <Frame  WidthRequest="30" HeightRequest="30" Background="white" Padding="0" BorderColor="gray"/>
                                        <Label Text="Name" TextColor="Firebrick" FontSize="16" FontAttributes="Bold" Margin="0,5,0,0"/>
                                        <Label Text="Staff ID" TextColor="Firebrick" FontSize="16" FontAttributes="Bold" Margin="250,5,0,0"/>
                                        <Label Text="Social Security No." TextColor="Firebrick" FontSize="16" FontAttributes="Bold" Margin="5,5,0,0"/>
                                        <Label Text="Sub Metro" TextColor="Firebrick" FontSize="16" FontAttributes="Bold" Margin="0,5,0,0"/>
                                        <Label Text="Payment Mode" TextColor="Firebrick" FontSize="16" FontAttributes="Bold" Margin="0,5,0,0"/>
                                        <Label Text="Grade Level" TextColor="Firebrick" FontSize="16" FontAttributes="Bold" Margin="0,5,0,0"/>
                                    </HorizontalStackLayout>
                                    <CollectionView x:Name="ByDepartment">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <StackLayout >
                                                    <BoxView HeightRequest="2" Color="gray"/>
                                                    <HorizontalStackLayout Margin="0,0,0,0" Spacing="20" Background="Transparent" Padding="5">
                                                        <Frame WidthRequest="20" HeightRequest="20" Margin="0,-15,0,0" BackgroundColor="White" BorderColor="gray" Padding="0"/>
                                                        <HorizontalStackLayout Margin="0,5,0,0" Spacing="10" >

                                                            <StackLayout Spacing="-3"  WidthRequest="310">
                                                                <HorizontalStackLayout Spacing="2" >
                                                                    <Label Text="{Binding employeeDetialsSurname}" TextColor="Black" FontSize="15" FontAttributes="Bold"  x:Name="ByDepartment_name"/>
                                                                    <Label Text="{Binding employeeDetialsFirstName}" TextColor="Black" FontSize="15" FontAttributes="Bold" />
                                                                    <Label Text="{Binding employeeDetialsMiddleName}" TextColor="Black" FontSize="15" FontAttributes="Bold" />
                                                                </HorizontalStackLayout >
                                                                <Label Text="{Binding otherEmailAddress}" TextColor="Black" FontSize="13" x:Name="ByDepartment_staffID"  />
                                                                <Label Text="{Binding otherMobileNo}" TextColor="Black" FontSize="13"   />
                                                            </StackLayout>
                                                            <Label Text="{Binding identificationStaffID}" WidthRequest="75" TextColor="black"  FontSize="15" Margin="0,0,0,0" />
                                                            <Label Text="{Binding identificationSocialSecurity}" TextColor="black"  WidthRequest="154" FontSize="15" Margin="0,0,0,0" />
                                                            <Label Text="{Binding LgsSubMetro}" TextColor="black" FontSize="15"  WidthRequest="80" Margin="0,0,0,0"/>
                                                            <Label Text="{Binding identificationPaymentMode}" TextColor="Black" FontSize="15"  WidthRequest="110" Margin="8,0,0,0"/>
                                                            <Label Text="{Binding employeeDetialsGradeLevel}" Margin="18,0,0,0"  WidthRequest="90" TextColor="Black" FontSize="15"/>
                                                        </HorizontalStackLayout>
                                                    </HorizontalStackLayout>
                                                </StackLayout>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </StackLayout>
                            
                            </StackLayout>
                            <StackLayout.Shadow>
                             <Shadow
                                Brush="White"
                                Offset="-2,10"
                                Opacity="0.2"
                            />  

                            </StackLayout.Shadow>
                        </StackLayout>
                        <!--sub metro-->
                        <StackLayout x:Name="bySubMetro" IsVisible="false">
                            <StackLayout  >
                                <StackLayout Spacing="10">
                                    <HorizontalStackLayout Spacing="20" >
                                        <Frame  WidthRequest="30" HeightRequest="30" Background="White"/>
                                        <Label Text="Name" TextColor="Firebrick" FontSize="16" FontAttributes="Bold" Margin="0,5,0,0"/>
                                        <Label Text="Staff ID" TextColor="Firebrick" FontSize="16" FontAttributes="Bold" Margin="215,5,0,0"/>
                                        <Label Text="Social Security No." FontSize="16" TextColor="Firebrick" FontAttributes="Bold" Margin="2,5,0,0"/>
                                        <Label Text="Department" TextColor="Firebrick" FontSize="16" FontAttributes="Bold" Margin="-2,5,0,0"/>
                                        <Label Text="Payment Mode" TextColor="Firebrick" FontSize="16" FontAttributes="Bold" Margin="152,5,0,0"/>
                                        <Label Text="Grade Level" TextColor="Firebrick" FontSize="16" FontAttributes="Bold" Margin="0,5,0,0"/>
                                    </HorizontalStackLayout>
                                    <CollectionView x:Name="BySubMetro">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <StackLayout >
                                                    <BoxView HeightRequest="2" Color="Gray"/>
                                                    <HorizontalStackLayout Margin="0,0,0,0" Spacing="20"  Background="Transparent" Padding="5">
                                                        <Frame WidthRequest="20" HeightRequest="20"  BackgroundColor="White" Padding="0" BorderColor="Gray"/>
                                                        <HorizontalStackLayout Margin="0,5,0,0" Spacing="10" >

                                                            <StackLayout Spacing="-3" WidthRequest="280" >
                                                                <HorizontalStackLayout>
                                                                    <Label Text="{Binding employeeDetialsSurname}" TextColor="Black" FontSize="15" FontAttributes="Bold" x:Name="ByDepartment_name"/>
                                                                    <Label Text="{Binding employeeDetialsFirstName}" TextColor="Black" FontSize="15" FontAttributes="Bold" />
                                                                    <Label Text="{Binding employeeDetialsMiddleName}" TextColor="Black" FontSize="15" FontAttributes="Bold" />
                                                                </HorizontalStackLayout>
                                                                <HorizontalStackLayout Spacing="15">
                                                                    <Label Text="{Binding otherEmailAddress}" TextColor="Black" FontSize="13"   />
                                                        
                                                                    <Label Text="{Binding otherMobileNo}" TextColor="Black" FontSize="13"  />

                                                                </HorizontalStackLayout>
                                                            </StackLayout>
                                                            <Label Text="{Binding identificationStaffID}"  WidthRequest="68" TextColor="Black" FontSize="15" Margin="0,5,0,0" />
                                                            <Label Text="{Binding identificationSocialSecurity}" WidthRequest="150" TextColor="Black" FontSize="15" Margin="0,5,0,0"/>
                                                            <Label Text="{Binding employeeDetialsDepartment}" TextColor="Black"  WidthRequest="250" FontSize="15" Margin="0,5,0,0"/>
                                                            <Label Text="{Binding identificationPaymentMode}" TextColor="Black" FontSize="15"  WidthRequest="110" Margin="8 ,5,0,0"/>
                                                            <Label Text="{Binding employeeDetialsGradeLevel}" TextColor="Black" FontSize="15"  WidthRequest="90" Margin="13,5,0,0"/>
                                                        </HorizontalStackLayout>
                                                    </HorizontalStackLayout>
                                                </StackLayout>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </StackLayout>
                            </StackLayout>
                            <StackLayout.Shadow>
                                <Shadow
                                Brush="White"
                                Offset="-5,10"
                                Opacity="0.2"
                            />      

                            </StackLayout.Shadow>
                        </StackLayout >
                            <!--Payment mode-->
                        <StackLayout x:Name="byPayment" IsVisible="false">
                            <StackLayout >
                                <StackLayout Spacing="10">
                                    <HorizontalStackLayout Spacing="20" >
                                        <Frame  WidthRequest="30" HeightRequest="30" Background="white" Padding="0" BorderColor="Gray"/>
                                        <Label Text="Name" TextColor="Firebrick" FontSize="16" FontAttributes="Bold" Margin="0,5,0,0"/>
                                        <Label Text="Staff ID" TextColor="Firebrick" FontSize="16" FontAttributes="Bold"  Margin="250,5,0,0"/>
                                        <Label Text="Social Security No."  TextColor="Firebrick" FontSize="16" FontAttributes="Bold" Margin="0,5,0,0" />
                                        <Label Text="Department" TextColor="Firebrick" FontSize="16" FontAttributes="Bold" Margin="0,5,0,0"/>
                                        <Label Text="Sub Metro" TextColor="Firebrick" FontSize="16" FontAttributes="Bold" Margin="149,5,0,0"/>
                                        <Label Text="Grade Level" TextColor="Firebrick" FontSize="16" FontAttributes="Bold" Margin="-2,5,0,0"/>
                                    </HorizontalStackLayout>
                                    <CollectionView x:Name="ByPaymentMode">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <StackLayout >
                                                    <BoxView HeightRequest="2" Color="gray"/>
                                                    <HorizontalStackLayout Margin="0,0,0,0" Spacing="20" Background="Transparent" Padding="5">
                                                        <Frame WidthRequest="20" HeightRequest="20" Margin="5,0,0,0" BackgroundColor="White" Padding="0" BorderColor="Gray"/>
                                                        <HorizontalStackLayout Margin="0,5,0,0" Spacing="10" >

                                                            <StackLayout Spacing="-3" WidthRequest="310">
                                                                <HorizontalStackLayout>
                                                                    <Label Text="{Binding employeeDetialsSurname}" TextColor="Black" FontSize="15" FontAttributes="Bold" x:Name="ByDepartment_name"/>
                                                                    <Label Text="{Binding employeeDetialsFirstName}" TextColor="Black" FontSize="15" FontAttributes="Bold" />
                                                                    <Label Text="{Binding employeeDetialsMiddleName}" TextColor="Black" FontSize="15" FontAttributes="Bold" />
                                                                </HorizontalStackLayout>
                                                                <HorizontalStackLayout Spacing="15">
                                                                    <Label Text="{Binding otherEmailAddress}" TextColor="Black" FontSize="13" x:Name="ByDepartment_staffID"  />
                                                                    <Label Text="{Binding otherMobileNo}" TextColor="Black" FontSize="13"  />
                                                                </HorizontalStackLayout>
                                                            </StackLayout>
                                                            <Label Text="{Binding identificationStaffID}" TextColor="Black" WidthRequest="68" FontSize="15" Margin="0,5,0,0" />
                                                            <Label Text="{Binding identificationSocialSecurity}" TextColor="Black" FontSize="15" WidthRequest="150" Margin="0,5,0,0"/>
                                                            <Label Text="{Binding employeeDetialsDepartment}" TextColor="Black" WidthRequest="250" FontSize="15" Margin="0,5,0,0"/>
                                                            <Label Text="{Binding LgsSubMetro}" TextColor="black" FontSize="15" Margin="5,5,0,0"/>
                                                            <Label Text="{Binding employeeDetialsGradeLevel}" TextColor="Black" FontSize="15"  WidthRequest="90"  Margin="45,5,0,0"/>
                                                        </HorizontalStackLayout>
                                                    </HorizontalStackLayout>
                                                </StackLayout>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </StackLayout>
                            </StackLayout>
                            <StackLayout.Shadow>
                            <Shadow
                                Brush="White"
                                Offset="-5,10"
                                Opacity="0.2"
                            />

                            </StackLayout.Shadow>
                        </StackLayout>
                            <!--staff id-->
                        
                        
                        <StackLayout IsVisible="false" x:Name="byStaffID" Background="Honeydew">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackLayout Grid.Column="0" Grid.Row="0" BackgroundColor="Silver">
                                    <!--identification-->
                                    <StackLayout Padding="20,0,0,50" Spacing="10">
                                        <StackLayout HorizontalOptions="Start" Margin="-20,20,0,10" WidthRequest="539" Background="Honeydew" >
